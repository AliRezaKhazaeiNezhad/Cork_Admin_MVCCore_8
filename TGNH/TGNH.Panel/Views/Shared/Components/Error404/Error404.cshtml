@{
    ViewData["Title"] = "Error 404";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Not Found</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            text-align: center;
            color: #333;
        }

        .error-container {
            margin-top: 100px;
        }

        h1 {
            font-size: 100px;
            margin-bottom: 10px;
        }

        p {
            font-size: 20px;
        }

        a {
            text-decoration: none;
            color: #007bff;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <h1>404</h1>
        <p>Page Not Found</p>
        <p>@Model</p>
        <a href="/">Go to Home</a>
    </div>
</body>
</html>
