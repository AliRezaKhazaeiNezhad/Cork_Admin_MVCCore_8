    @* @await Component.InvokeAsync("OpenGraph") *@
    <meta property="og:type" content="website" />
    <meta property="og:image" content="image.png" />
    <meta property="og:title" content="A Basic HTML Template" />
    <meta property="og:url" content="https://asd.com/test/test" />
    <meta property="og:description" content="A simple HTML5 Template" />

    @* @await Component.InvokeAsync("FavoriteIcon") *@
    <link rel="icon" type="image/x-icon" href="~/Cork/ltr/src/assets/img/favicon.ico" />

    @* @await Component.InvokeAsync("StyleSheetHM") *@
    <link href="~/cork/rtl/layout/horizontal_dark_menu/css/light/loader.css" rel="stylesheet" type="text/css" />
    <link href="~/cork/rtl/layout/horizontal_dark_menu/css/dark/loader.css" rel="stylesheet" type="text/css" />

    <!-- <partial name="Layouts/Cork/Rtl/PartialViews/_StyleSheet" /> -->
    
    <environment include="Development" exclude="Production">

        <link href="~/css/fontgoogle_1.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/lib/bootstrap/css/bootstrap.rtl.css" rel="stylesheet" type="text/css" asp-append-version="true" />
        <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" type="text/css" asp-append-version="true" />

    </environment>

    <environment include="Production" exclude="Development">

        <link href="~/css/fontgoogle_1.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/lib/bootstrap/css/bootstrap.rtl.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
        <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />

    </environment>

    <link rel="stylesheet" href="~/@(nameof(Microsoft.AspNetCore.Mvc)).styles.css" asp-append-version="true" />



    <link href="~/cork/rtl/layout/horizontal_dark_menu/css/light/plugins.css" rel="stylesheet" type="text/css" />
    <link href="~/cork/rtl/layout/horizontal_dark_menu/css/dark/plugins.css" rel="stylesheet" type="text/css" />

    @RenderSection(name: "StyleSheet", required: false)
</head>
<body class="layout-boxed enable-secondaryNav">

    @await Component.InvokeAsync("Loder")
    @await Component.InvokeAsync("Navbar")


    <!--  BEGIN MAIN CONTAINER  -->
    <div class="main-container" id="container">

        <div class="overlay"></div>
        <div class="search-overlay"></div>

        @await Component.InvokeAsync("Sidebar")

        <!--  BEGIN CONTENT AREA  -->
        <div id="content" class="main-content">

            @await Component.InvokeAsync("Breadcrumbs")

            @(RenderBody())
            @await Component.InvokeAsync("Footer")
        </div>
        <!--  END CONTENT AREA  -->

    </div>

    @* @await Component.InvokeAsync("ScriptsHM") *@
    <!-- <partial name="Layouts/Cork/Rtl/PartialViews/_Scripts" /> -->
    <!-- BEGIN GLOBAL MANDATORY SCRIPTS -->
    <environment include="Development" exclude="Production">
        <script src="~/lib/jquery/jquery.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js" asp-append-version="true"></script>
        <script src="~/cork/rtl/src/plugins/src/waves/waves.min.js" asp-append-version="true"></script>
        <script src="~/cork/rtl/src/plugins/src/mousetrap/mousetrap.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/cork/rtl/src/plugins/src/perfect-scrollbar/perfect-scrollbar.min.js" asp-append-version="true"></script>
    </environment>

    <environment include="Production" exclude="Development">
        <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
        <script src="~/cork/rtl/src/plugins/src/waves/waves.min.js" asp-append-version="true"></script>
        <script src="~/cork/rtl/src/plugins/src/mousetrap/mousetrap.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js" asp-append-version="true"></script>
        <script src="~/cork/rtl/src/plugins/src/perfect-scrollbar/perfect-scrollbar.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    </environment>
    <!-- END GLOBAL MANDATORY SCRIPTS -->
    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
    <script src="~/cork/rtl/layout/horizontal_dark_menu/app.js" asp-append-version="true"></script>
    <script src="~/cork/rtl/layout/horizontal_dark_menu/loader.js" asp-append-version="true"></script>
    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->

    @RenderSection(name: "Scripts", required: false)

</body>
</html>
