    <link rel="icon" type="image/x-icon" href="~/Crok/Rtl/src/assets/img/favicon.ico" />
    <link href="~/Crok/Rtl/layouts/horizontal_dark_menu/css/dark/loader.css" rel="stylesheet" type="text/css" />


    <link href="~/Crok/Rtl/src/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Cork/Rtl/layouts/horizontal-dark-menu/css/light/plugins.css" rel="stylesheet" type="text/css" />
